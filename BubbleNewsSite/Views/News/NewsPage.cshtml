@model BubbleNewsSite.Models.News

@{
    ViewBag.Title = "News";
}

<div class="col-md-8">
    <div class="col-md-12 d-flex flex-wrap justify-content-center mt-3 mb-2 border-bottom">
        <img class="col-md-10 mb-3" src="@Model.Img" alt="@Model.Img" />
    </div>
    <div class="col-md-12 mb-5 text-center">
        <h4>
            @Model.Article
        </h4>
    </div>
    <div class="col-md-12">
        @Html.Raw(Model.Description)
    </div>
    <div class="col-md-12  d-flex flex-wrap justify-content-end align-content-end">
        @Model.NewsType, @Model.DateCreateNews.ToShortDateString() @Model.DateCreateNews.ToShortTimeString() |
        <img src="~/img/eye.png" alt="eye" style="height: 27px; width: 27px;" /><div style="padding-left: 4px;">@Model.CountViews</div> (@Model.WhoCreated)
    </div>
</div>