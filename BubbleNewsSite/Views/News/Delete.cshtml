@model BubbleNewsSite.Models.News

@{
    ViewBag.Title = "Delete";
}

<div>
    <dl class="dl-horizontal">
        <dt>Article news</dt>
        <dd>@Model.Article</dd>

        <dt>Description</dt>
        <dd>@Html.Raw(Model.Description);</dd>

        <dt>News type</dt>
        <dd>@Model.NewsType</dd>

        <dt>Image</dt>
        <dd>@Model.Img</dd>

        <dt>Is the news hidden?</dt>
        @if (Model.HideNews == true)
        {
            <dd>Yes</dd>
        }
        else
        {
            <dd>No</dd>
        }
    </dl>
</div>

<form asp-action="Delete" asp-controller="News">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
