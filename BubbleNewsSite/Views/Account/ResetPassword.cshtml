@model BubbleNewsSite.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutLogReg.cshtml";
}

<div class="col-md-12 d-flex justify-content-center pt-5 pb-5">
    <a asp-action="Index" asp-controller="Home">
        <img src="~/logo/Bubblelogo.png" alt="Logo Bubble News" />
    </a>
</div>


<div class="col-md-12 d-flex flex-wrap justify-content-center">
    <div class="col-md-6 d-flex flex-wrap justify-content-center">
        <form class="col-md-12" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <h2 class="col-md-12 d-flex justify-content-center">Reset password</h2>

            <input asp-for="Code" type="hidden" />
            <div class="col-md-12 pt-3 pb-3">
                <input class="form-control" asp-for="Email" placeholder="Email" />
                <span class="text-danger" asp-validation-for="Email" ></span>
            </div>
            <div class="col-md-12 pb-3">
                <input class="form-control" asp-for="Password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="col-md-12 pb-3">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="col-md-12 pb-3 d-flex justify-content-end">
                <input class="btn btn-dark" type="submit" value="Reset" />
            </div>
        </form>
    </div>
</div>
